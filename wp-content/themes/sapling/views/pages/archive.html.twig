{% extends "pages/welcome.html.twig" %}
{% block content %}
    <section class="posts-teasers">
        <div class="row">
            <div class="small-12 columns">
                <h2>Blog</h2>
            </div>
        </div>
        {% for post in posts %}
            <div class="post-teaser">
                <div class="row">
                    <div class="small-12 columns">
                        <h3>{{ post.title }}</h3>
                        {{ post.excerpt }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
    {% include 'leaves/pagination.html.twig' %}
{% endblock %}